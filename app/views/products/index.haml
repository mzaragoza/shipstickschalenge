%h2 Products
= form_for([product], html: {class: 'stdform stdform2'} , method: :get) do |f|
  %p
    %label Search
    %span.field
      = text_field_tag :search
      = f.button 'Search', class: 'btn btn-primary', disable_with: 'Searching...'
      %br
      ex: (48”x14”x12”) : (Length"xWidth"xHeight")
.table-responsive
  %table.table.table-bordered.table-hover.table-striped
    %thead
      %tr
        %th Name
        %th Length
        %th Width
        %th Height
        %th Weight
        %th{colspan: 2}= link_to 'Add', new_product_path, class: 'btn btn-primary pull-right'
    %tbody
      - products.each do |p|
        %tr
          %td= link_to p.name, product_path(p), class: 'btn btn-link'
          %td= p.length
          %td= p.width
          %td= p.height
          %td= p.weight
          %td= link_to 'Edit', edit_product_path(p), class: 'btn btn-info'
          %td= link_to 'Delete', product_path(p), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }
